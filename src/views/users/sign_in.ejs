<!DOCTYPE html>
<html lang="en">
  <head>

    <% include ../static/partials/head.ejs %>

  </head>
  <body>
    
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>
    
      <header class="jumbotron my-4">
        <h2 class="display-3">Welcome to Richipedia</h2>
        
      </header>

      <h1>Sign in</h1>

      <form action="/users/sign_in" method="post">

        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" class="form-control" name="username" aria-describedby="emailHelp" placeholder="Enter username">
          <small class="text-muted" id="emailHelp">username</small>
        </div>

        <div class="form-group">
          <label for="password">Password (8-20 characters)</label>
          <input type="password" class="form-control" name="password" aria-describedby="passwordHelp" placeholder="Enter password">
          
        </div>

        <button type="submit" class="btn btn-primary">Sign in</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>